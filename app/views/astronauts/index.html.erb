<h1>Astronaut</h1>

<% @astronauts.each do |astronaut| %>
  <section id="astronaut-<%= "#{astronaut.id}"%>">
    <p>
      Name: <%= astronaut.name %>
      Age: <%= astronaut.age %>
      Job: <%= astronaut.job %>
    </p>
    <p>
      Missions:
      <% astronaut.missions.order(:title).each do |mission| %>
        <%= mission.title %>
      <% end %>
      <%= form_with url: "/astronaut/#{astronaut.id}/missions", method: :post, local: true do |f| %>
        <%= f.label :search %>
        <%= f.text_field :search %>
        <%= f.submit "Search" %>
      <% end %>
    </p>
  </section>
<% end %>

<p>Average Age: <%= @astronauts.average_age %></p>
